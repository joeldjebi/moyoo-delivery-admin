# Configuration de production pour MOYOO Admin Delivery
# Copiez ce fichier vers .env et adaptez les valeurs

APP_NAME="MOYOO Admin Delivery"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://votre-domaine.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Base de données de production
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=moyoo_delivery_prod
DB_USERNAME=moyoo_user
DB_PASSWORD=CHANGEZ_CE_MOT_DE_PASSE

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Configuration email (Mailjet)
MAIL_MAILER=mailjet
MAIL_HOST=smtp.mailjet.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@votre-domaine.com"
MAIL_FROM_NAME="${APP_NAME}"

# Configuration Mailjet
MAILJET_API_KEY=VOTRE_CLE_API_MAILJET
MAILJET_SECRET_KEY=VOTRE_SECRET_MAILJET

# Configuration WhatsApp (Wassenger)
WASSENGER_API_URL=https://api.wassenger.com
WASSENGER_API_TOKEN=VOTRE_TOKEN_WASSENGER
WASSENGER_DEVICE_ID=VOTRE_DEVICE_ID

# Configuration Firebase
FIREBASE_SERVER_KEY=VOTRE_CLE_SERVEUR_FIREBASE

# Configuration AWS (si utilisé)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Configuration Pusher (si utilisé)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Configuration Swagger
L5_SWAGGER_CONST_HOST=https://votre-domaine.com
L5_SWAGGER_CONST_BASE_PATH=/
L5_SWAGGER_CONST_SCHEMES=https
L5_SWAGGER_CONST_TOS=
L5_SWAGGER_CONST_CONTACT_EMAIL=contact@votre-domaine.com
L5_SWAGGER_CONST_LICENSE_NAME=MIT
L5_SWAGGER_CONST_LICENSE_URL=https://opensource.org/licenses/MIT
L5_SWAGGER_CONST_VERSION=1.0.0
